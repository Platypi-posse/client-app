    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h1 class="section-heading">Login</h1>
                <form action="/account/login" method="post">
                  <input class="form-control" type="text" name="email" value="" placeholder="Your email">
                  <input class="form-control" type="password" name="password_hash" value="" placeholder="Your password">
                  <button type="submit" class="btn btn-default">Log In</button>
                </form>
            </div>
            <div class="col-lg-6">
                <h1 class="section-heading">Register</h1>
                <form action="/account/register" method="post">
                  <input class="form-control" type="text" name="name" value="" placeholder="Your name">
                  <input class="form-control" type="email" name="email" value="" placeholder="Your email">
                  <input class="form-control" type="password" name="password_hash" value="" placeholder="Your password">
                  <input class="form-control" type="password" name="password_conf" value="" placeholder="Confirm your password">
                  <button type="submit" class="btn btn-default">Register</button>
                </form>
            </div>
        </div>
    </div>
</section>
